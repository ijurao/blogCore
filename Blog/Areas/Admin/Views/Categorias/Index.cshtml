
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de categorias</h2>
        </div>
        
        <div class="col-6 text-right">
            <a class="ntn btn-primary" asp-action="Create" asp-controller="Categorias"><i class="fa fa-plus">Nueva Categoria</i></a>
        </div>

    </div>
    <br />
    <br />
    <table id="tbCategorias" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Orden</th>
                <th></th>
            </tr>

        </thead>
     

    </table>
</div>

@section Scripts{ 
<script src="~/js/Categorias.js"></script>

}