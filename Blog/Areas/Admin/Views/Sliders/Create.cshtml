@model Blog.Modelos.Slider;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center">Crear un nuevo Slider</h3>
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Titulo"></label>
                </div>

                <div class="col-8">
                    <input asp-for="@Model.Titulo" class="form-control" />
                    <span asp-validation-for="@Model.Titulo" class="text-danger"></span>
                </div>
            </div>
           
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.UrlImagen"></label>
                    <span asp-validation-for="@Model.UrlImagen" class="text-danger" ></span>

                </div>

                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivos" class="form-control" required />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <partial name="_CrearYVolver">
                </div>
            </div>




        </div>
    </div>


</form>

