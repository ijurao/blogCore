<div class="row fondoTitulo mt5">
    <div class="col-sm-12 py-5">

        <h1 class="text-center text-white">Ultimos articulos</h1>


    </div>

</div>

<!--articulos-->

@if (Model.Articulos.Count() > 0)
{
    <hr />
    <div class="row">
        @{ foreach (var articulo in Model.Articulos.OrderBy(a => a.FechaCreacion))
            {
                <div class="col-4 ">
                    <div class="card">
                        <img class="img-thumbnail" width="100%" src="@Url.Content(articulo.UrlImagen)" />
                        <div class="card-body">
                            <h5 class="text-center">@articulo.Titulo</h5>
                            <p>@articulo.FechaCreacion</p>
                            <a asp-action="Details" class="btn btn-success" style="border-radius:2px;" asp-route-id="@articulo.Id"> Mas informacion</a>
                        </div>

                    </div>


                </div>
            }
        }

    </div>

}
else
{<p>No hay articulos</p>}
